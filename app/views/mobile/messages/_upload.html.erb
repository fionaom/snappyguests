<div class="upload_step">
  <div style="width: 0; height: 0; overflow: hidden;">
    <%= f.file_field :photo, :accept => "image/*" %>
  </div>

  <div role="main" class="ui-content" data-theme="d">

    <div id="photo_container" class="loadingImages">
      <div id="polaroid_mask" class="image_upload">
        <%= image_tag 'upload_your_photo.png', :onload=>"fadeInImage(this)", :class=> "fadeInImage loading", :id => "message_photo" %>
      </div>
      <%= image_tag "/images/polaroid.png", :onload=>"fadeInImage(this)", :class=> "fadeInImage loading", :id => "polaroid_image" %>
    </div>

  </div>
</div>