<ul id="light-gallery" class="gallery" data-event-title="<%= @event.title %>">
  <% @event.messages.order(:created_at).limit(100).each do |message| %>
    <%= render 'message_list_item', :message => message %>
  <% end %>
</ul>

<% content_for :header do %>
    <script>
        $(document).ready(function() {
            var lightGallery = initializeLightGallery(0);

            load_new_messages_interval = setInterval(function(){ loadNewMessages();},load_new_messages_interval_time);

        });
    </script>
<% end %>