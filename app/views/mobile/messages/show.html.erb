
<!-- Start of second page -->
<div data-role="page" data-theme="d">
  <div data-role="header" data-theme="b" data-position="fixed">
    <%= image_tag("logo.png") %>
    <%= link_to 'Upload', "#{mobile_root_path}#upload", :data => {'transition' => 'slide', 'prefetch' => true}, :class => 'ui-btn-right' %>
  </div>

  <div role="main" class="ui-content" data-theme="d">
    <div id="photo_container">
      <div id="polaroid_background"></div>
      <%= image_tag @message.photo(:medium) %>
      <div id="polaroid_mask" class="image_upload">
        <div id="photo_message">
          <%= @message.body %>
        </div>
      </div>
    </div>
  </div>

</div>
